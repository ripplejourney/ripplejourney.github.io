{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>renovatebot/.github',
  ],
  semanticCommitScope: 'deps',
  automergeType: 'pr',
  baseBranches: [
    '$default',
    'master',
  ],
  dockerfile: {
    semanticCommitType: 'build',
  },
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      groupName: 'dependencies',
    },
    {
      matchUpdateTypes: [
        'major',
      ],
      groupName: 'major-dependencies',
    },
  ],
  automerge: true,
  major: {
    automerge: false,
    groupName: 'major',
  },
}
