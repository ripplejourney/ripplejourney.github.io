{
  "name": "@sugarat/theme",
  "version": "0.5.7",
  "description": "简约风的 Vitepress 博客主题，sugarat vitepress blog theme",
  "author": "sugar",
  "license": "MIT",
  "homepage": "https://theme.sugarat.top",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ATQQ/sugar-blog.git"
  },
  "bugs": {
    "url": "https://github.com/ATQQ/sugar-blog/issues"
  },
  "keywords": [
    "vitepress",
    "theme",
    "粥里有勺糖"
  ],
  "exports": {
    "./node": {
      "types": "./node.d.ts",
      "import": "./node.mjs",
      "require": "./node.js",
      "default": "./node.js"
    },
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "main": "src/index.ts",
  "files": [
    "node.d.ts",
    "node.js",
    "node.mjs",
    "src",
    "types"
  ],
  "scripts": {
    "dev": "npm run build:node && npm run dev:docs",
    "dev:docs": "vitepress dev docs",
    "dev:node": "npx tsup --watch",
    "build": "npm run build:node && npm run build:docs",
    "build:docs": "vitepress build docs",
    "build:node": "npx tsup",
    "serve": "vitepress serve docs"
  },
  "peerDependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "element-plus": "^2.7"
  },
  "dependencies": {
    "@giscus/vue": "^3.1.1",
    "@mdit-vue/shared": "^3.0.2",
    "@mermaid-js/mermaid-mindmap": "^9.3.0",
    "@sugarat/theme-shared": "workspace:*",
    "@vue/shared": "^3.5.22",
    "@vueuse/core": "^14.0.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "mermaid": "^11.12.1",
    "oh-my-live2d": "^0.19.3",
    "swiper": "^12.0.3",
    "vitepress-markdown-timeline": "^1.2.2",
    "vitepress-plugin-announcement": "workspace:*",
    "vitepress-plugin-group-icons": "1.6.5",
    "vitepress-plugin-mermaid": "2.0.17",
    "vitepress-plugin-pagefind": "workspace:*",
    "vitepress-plugin-rss": "workspace:*",
    "vitepress-plugin-tabs": "0.7.3"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "artalk": "^2.9.1",
    "element-plus": "^2.11.5",
    "pagefind": "^1.4.0",
    "sass": "^1.93.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitepress": "^1.6.4",
    "vitepress-plugin-51la": "workspace:*",
    "vue": "^3.5.22"
  }
}
