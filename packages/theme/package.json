{
  "name": "@sugarat/theme",
  "version": "0.5.4",
  "description": "简约风的 Vitepress 博客主题，sugarat vitepress blog theme",
  "author": "sugar",
  "license": "MIT",
  "homepage": "https://theme.sugarat.top",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ATQQ/sugar-blog.git"
  },
  "bugs": {
    "url": "https://github.com/ATQQ/sugar-blog/issues"
  },
  "keywords": [
    "vitepress",
    "theme",
    "粥里有勺糖"
  ],
  "exports": {
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.mjs",
      "require": "./dist/node.js",
      "default": "./dist/node.js"
    },
    "./package.json": "./package.json",
    ".": "./src/index.ts"
  },
  "main": "src/index.ts",
  "files": [
    "node.d.ts",
    "node.js",
    "node.mjs",
    "src",
    "types"
  ],
  "scripts": {
    "dev": "npm run build:node && npm run dev:docs",
    "dev:docs": "vitepress dev docs",
    "dev:node": "npx tsup --watch",
    "build": "npm run build:node && npm run build:docs",
    "build:docs": "vitepress build docs",
    "build:node": "npx tsup",
    "serve": "vitepress serve docs"
  },
  "peerDependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "element-plus": "^2.7"
  },
  "dependencies": {

    "@giscus/vue": "^3.0.0",
    "@mdit-vue/shared": "^2.0.0",

    "@mermaid-js/mermaid-mindmap": "^9.3.0",
    "@sugarat/theme-shared": "workspace:*",
    "@vue/shared": "^3.4.26",
    "@vueuse/core": "^13.0.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "mermaid": "^11.5.0",
    "oh-my-live2d": "^0.19.3",
    "swiper": "^11.1.1",
    "vitepress-markdown-timeline": "^1.2.1",
    "vitepress-plugin-announcement": "workspace:*",
    "vitepress-plugin-group-icons": "^1.2.4",
    "vitepress-plugin-mermaid": "2.0.17",
    "vitepress-plugin-pagefind": "workspace:*",
    "vitepress-plugin-rss": "workspace:*",
    "vitepress-plugin-tabs": "0.7.1"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "2.3.1",
    "artalk": "2.9.1",
    "element-plus": "2.9.9",
    "pagefind": "1.3.0",
    "sass": "1.87.0",
    "typescript": "5.8.3",
    "vite": "6.3.4",
    "vitepress": "1.6.3",
    "vitepress-plugin-51la": "workspace:*",
    "vue": "3.5.13"
  }
}
